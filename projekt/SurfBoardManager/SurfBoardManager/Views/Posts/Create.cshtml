@model PostBoardsViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Post.Price" class="control-label"></label>
                <input asp-for="Post.Price" class="form-control" />
                <span asp-validation-for="Post.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Equipment" class="control-label"></label>
                <input asp-for="Post.Equipment" class="form-control" />
                <span asp-validation-for="Post.Equipment" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="ChosenBoardId" class="control-label"></label>
                <select asp-for="ChosenBoardId" class="form-select">
                    @foreach (Board board in Model.Boards)
                    {
                        <option value="@board.Id">@board.Name</option>
                    }
                </select>
                <span asp-validation-for="ChosenBoardId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
